{
    "app-id": "org.flatpak.caesar_cipher",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "caesar_cipher",
    "modules": [
        {
            "name": "caesar_cipher",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ptolemy7/caesar_cipher.git"
                }
            ]
            "buildsystem": "simple",
            "build-commands": [
                "source /usr/lib/sdk/rust-stable/enable && cargo build--release"
                "install -D target/release/caesar-cipher app/bin/caesar_cipher"
            ],
        }
    ]
}
